{
  "name": "@magnite/fledge.polyfill",
  "homepage": "https://github.com/MagniteEngineering/fledge.polyfill#readme",
  "description": "A Fledge JavaScript polyfill",
  "author": "Newton Koumantzelis",
  "version": "0.0.0",
  "main": "index.js",
  "type": "module",
  "repository": "https://github.com/MagniteEngineering/fledge.polyfill.git",
  "bugs": "https://github.com/MagniteEngineering/fledge.polyfill/issues",
  "releases": "https://github.com/MagniteEngineering/fledge.polyfill/releases",
  "wiki": "https://github.com/MagniteEngineering/fledge.polyfill/wiki",
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@theholocron"
    ]
  },
  "engines": {
    "node": "^12.16.0 || >=13.2.0"
  },
  "eslintConfig": {
    "extends": "@theholocron"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged --config @theholocron/lint-staged-config"
    }
  },
  "jest": {
    "preset": "@theholocron/jest-preset",
    "testEnvironment": "jest-environment-node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/unit/mocks.js",
      "<rootDir>/test/unit/coverage/"
    ],
    "transform": {}
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "extends": "@theholocron/semantic-release-config",
    "branch": "master"
  },
  "scripts": {
    "commit": "commit",
    "dist": "echo 'No dist task specified' && exit 1",
    "lint": "eslint .",
    "release": "semantic-release",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/unit --passWithNoTests",
    "test:integration": "export JEST_PUPPETEER_CONFIG=jest-puppeteer.config.cjs && npm run test:integration:ci",
    "test:integration:ci": "jest --config test/integration/jest.config.js",
    "serve": "./node_modules/.bin/serve . -l 3000"
  },
  "devDependencies": {
    "@theholocron/commitlint-config": "^0.1.11",
    "@theholocron/eslint-config": "^0.4.1",
    "@theholocron/jest-preset": "^0.2.3",
    "@theholocron/lint-staged-config": "^0.1.6",
    "@theholocron/semantic-release-config": "^0.2.4",
    "jest-environment-node": "^26.6.2",
    "jest-puppeteer": "^4.4.0",
    "puppeteer": "^8.0.0",
    "serve": "^11.3.2"
  }
}
