{
  "name": "@magnite/fledge.polyfill",
  "homepage": "https://github.com/MagniteEngineering/fledge.polyfill#readme",
  "description": "A Fledge JavaScript polyfill",
  "author": "Newton Koumantzelis",
  "version": "0.0.0",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "repository": "https://github.com/MagniteEngineering/fledge.polyfill.git",
  "bugs": "https://github.com/MagniteEngineering/fledge.polyfill/issues",
  "releases": "https://github.com/MagniteEngineering/fledge.polyfill/releases",
  "wiki": "https://github.com/MagniteEngineering/fledge.polyfill/wiki",
  "license": "MIT",
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-runtime"
        ]
      }
    },
    "presets": [
      "@theholocron"
    ]
  },
  "commitlint": {
    "extends": [
      "@theholocron"
    ]
  },
  "engines": {
    "node": "^12.16.0 || >=13.2.0"
  },
  "eslintConfig": {
    "extends": "@theholocron"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged --config @theholocron/lint-staged-config"
    }
  },
  "jest": {
    "preset": "@theholocron/jest-preset",
    "setupFiles": [
      "fake-indexeddb/auto"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/unit/mocks.js",
      "<rootDir>/test/unit/coverage/"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "extends": "@theholocron/semantic-release-config",
    "branch": "master"
  },
  "scripts": {
    "commit": "commit",
    "dist": "rollup -c",
    "lint": "eslint .",
    "release": "semantic-release",
    "test:unit": "jest test/unit --passWithNoTests",
    "pretest:integration": "npm run dist",
    "test:integration": "jest --config test/integration/jest.config.js",
    "test": "npm run test:unit && npm run test:integration",
    "serve": "./node_modules/.bin/serve . -l 3000"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@theholocron/babel-preset": "^0.3.10",
    "@theholocron/commitlint-config": "^0.1.11",
    "@theholocron/eslint-config": "^0.4.1",
    "@theholocron/jest-preset": "^0.2.3",
    "@theholocron/lint-staged-config": "^0.1.6",
    "@theholocron/semantic-release-config": "^0.2.4",
    "del": "^6.0.0",
    "fake-indexeddb": "^3.1.2",
    "jest-puppeteer": "^4.4.0",
    "puppeteer": "^8.0.0",
    "rollup": "^2.45.2",
    "rollup-plugin-terser": "^7.0.2",
    "serve": "^11.3.2"
  },
  "dependencies": {
    "idb": "^6.0.0"
  }
}
