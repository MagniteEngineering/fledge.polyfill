root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 4

[.gitattributes]
indent_style = space
indent_size = 2

[*.{json,yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[.*{rc,ignore}]
indent_style = space
indent_size = 2
